<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CoffeeHouse.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CoffeeHouse.App"
    xmlns:home="clr-namespace:CoffeeHouse.App.Modules.HomeComponent"
    xmlns:login="clr-namespace:CoffeeHouse.App.Modules.LoginComponent"
    NavBarIsVisible="False"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Disabled">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource Primary}" StatusBarStyle="LightContent"></toolkit:StatusBarBehavior>
    </Shell.Behaviors>
    
    <ShellContent
        Title="Loading"
        ContentTemplate="{DataTemplate local:LoadingPage}"
        Route="LoadingPage" />
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate home:HomePage}"
        Route="HomePage" />

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate login:LoginPage}"
        Route="LoginPage" />
</Shell>
